@model Menu.Models.Dish
@{
    ViewData["Title"] = "Details";

}

<div class="container">
    <div class="d-flex justify-content-center">
        <h3>@Model.Name</h3>
    </div>
    <div class="d-flex justify-content-center">
        <img src="@Model.ImageUrl" style="width: 450px; height: 450px; object-fit: cover; border-radius: 15px;" />
    </div>
    <div class="d-flex justify-content-center">
        @Model.Price.ToString("N2") Dollars
    </div>
    <div class="d-flex justify-content-center">
        Ingredients:
        <ul>
            @foreach(var item in Model.DishIngredients)
            {
                <li>
                    @item.Ingredient.Name
                </li>
            }
        </ul>
    </div>
    <div class="text-center">
    <a class="btn btn-info" asp-controller="Menu" asp-action="Order">Order</a>
    <a class="btn btn-info" asp-controller="Menu" asp-action="Index">Back to Menu</a>
    </div>
</div>
