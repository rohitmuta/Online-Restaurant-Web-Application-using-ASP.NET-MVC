@model List<Menu.Models.Dish>
@{
    ViewData["Title"] = "MenuIndex";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="d-flex justify-content-center">
        <h1>Welcome to Pizzeria!</h1>
        </div>

        @foreach(var item in Model)
        {
            <div class="col-6 col-md-4">
                <div class="d-flex justify-content-center">
                    <h4>@item.Name</h4>
                </div>
                <div class="d-flex justify-content-center">
                    <img src="@item.ImageUrl" style="width: 250px; height: 250px; object-fit: cover; border-radius: 25px;" alt="@item.Name" />
                </div>
                <div class="d-flex justify-content-center">
                    @item.Price.ToString("N2") Dollars
                </div>
                <div class="d-flex justify-content-center">
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">View Dish</a>
                </div>
             </div>
        }
    </div>
</div>
